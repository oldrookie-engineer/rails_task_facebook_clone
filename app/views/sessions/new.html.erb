<div class="container">
  <div class="login">
    <h1>ログイン</h1>
    <%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>
    <div class="login-form">
      <%= f.label :メールアドレス %>
      <%= f.email_field :email %>
      <%= f.label :パスワード %>
      <%= f.password_field :password %>
    </div><br>
      <%= f.submit "ログイン" %>
    <% end %>
  </div>
</div>
