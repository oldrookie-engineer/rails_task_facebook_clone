  <div class="picture-table">
    <h1>投稿一覧</h1>
    <table>
      <thead>
        <tr class="row">
          <th class="col-md-3">画像</th>
          <th class="col-md-3">内容</th>
          <th class="col-md-3">投稿者</th>
          <th colspan="3">メニュー</th>
        </tr>
      </thead>
      <tbody>
        <% @pictures.each do |picture| %>
          <tr class="row">
            <td class="col-md-3"><%= picture.image %></td>
            <td class="col-md-3"><%= picture.content %></td>
            <td class="col-md-3"><%= picture.user.name %></td>
            <td class="col-md-1"><%= link_to '詳細', picture %></td>
            <td class="col-md-1"><%= link_to '編集', edit_picture_path(picture) if picture.user_id == current_user.id %></td>
            <td class="col-md-1"><%= link_to '削除', picture, method: :delete, data: { confirm: '本当に削除していいですか?' } if picture.user_id == current_user.id %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>
    <a><%= link_to '新規投稿へ', new_picture_path %></a>
  </div>
